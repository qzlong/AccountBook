<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.accountbook"
    android:requestLegacyExternalStorage="true"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="30" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.USE_BIOMETRIC" />
    <uses-permission android:name="com.fingerprints.service.ACCESS_FINGERPRINT_MANAGER" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.samsung.android.providers.context.permission.WRITE_USE_APP_FEATURE_SURVEY" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="org.litepal.LitePalApplication"
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.example.accountbook.SetPatternCodeActivity" />
        <activity android:name="com.example.accountbook.SelectAccount" />
        <activity android:name="com.example.accountbook.KeepAccountActivity" />
        <activity android:name="com.example.accountbook.PasswordConfirm" />
        <activity
            android:name="com.example.accountbook.ChartAnalysisActivity"
            android:parentActivityName="com.example.accountbook.MainActivity" />
        <activity
            android:name="com.example.accountbook.StatisticsActivity"
            android:parentActivityName="com.example.accountbook.MainActivity" />
        <activity
            android:name="com.example.accountbook.BillDetailActivity"
            android:parentActivityName="com.example.accountbook.StatisticsActivity" />
        <activity
            android:name="com.example.accountbook.ChartDetailActivity"
            android:parentActivityName="com.example.accountbook.ChartAnalysisActivity" />
        <activity android:name="com.example.accountbook.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="droidninja.filepicker.FilePickerActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name="droidninja.filepicker.MediaDetailsActivity"
            android:configChanges="orientation|screenSize" />

        <provider
            android:name="droidninja.filepicker.utils.FilePickerProvider"
            android:authorities="com.example.accountbook.droidninja.filepicker.provider"
            android:exported="false"
            android:grantUriPermissions="true" >
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>
        <provider
            android:name="androidx.lifecycle.ProcessLifecycleOwnerInitializer"
            android:authorities="com.example.accountbook.lifecycle-process"
            android:exported="false"
            android:multiprocess="true" />
    </application>

</manifest>