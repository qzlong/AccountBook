<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <include layout="@layout/activity_main_title"
        android:id="@+id/activity_main_title"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_main_title"
        android:id="@+id/institute"
        android:orientation="vertical"
        android:layout_marginBottom="10sp"
        android:layout_marginTop="10sp"
        >
        <TextView
            android:id="@+id/txt_paid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="支出:"
            android:textSize="20sp"
            android:textColor="#ff0000"
            />
        <TextView
            android:id="@+id/txt_income"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="收入:"
            android:textColor="#00ff00"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/txt_change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="余额:"
            android:textSize="20sp"
            android:textColor="#000000"
            />
    </LinearLayout>

    <ListView
        android:layout_below="@id/institute"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        />
    <Button
        android:id="@+id/btn_keep_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="记一笔"
        />

</RelativeLayout>