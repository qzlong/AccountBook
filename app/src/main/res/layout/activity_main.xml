<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--主界面-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--上面一栏四个按钮-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7" >

            <Button
                android:id="@+id/btn_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="7dp"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/shezhi"
                android:text="设置" />

            <Button
                android:id="@+id/btn_institute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="160dp"
                android:paddingTop="7dp"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/liushui"
                android:text="流水" />
            <Button
                android:id="@+id/btn_graph_analysis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="7dp"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/tubiao"
                android:text="图表"
                />
            <Button
                android:id="@+id/btn_select_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="7dp"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/zhanghu"
                android:text="账户"
                />
        </LinearLayout>
        <!--流水展示-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9">

        </LinearLayout>
        <!--记一笔按钮-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:gravity="center"
            android:paddingBottom="5dp">
            <Button
                android:id="@+id/btn_keep_account"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_background"
                android:text="记一笔"
                android:textSize="30dp"/>
        </LinearLayout>

    </LinearLayout>
    <!--左滑界面-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start">

    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>